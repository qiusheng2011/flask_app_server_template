  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python:gunicorn ",
      "type": "python",
      "request": "launch",
      "module": "gunicorn",
      "env": { "FLASK_APP": "app_template", "FLASK_DEBUG": "1" },
      "args": ["-w 1", "app_template:app"],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app_template",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "justMyCode": true
    },
  ]
}
